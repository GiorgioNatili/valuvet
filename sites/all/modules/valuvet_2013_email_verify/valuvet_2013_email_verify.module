/**
 * Additional vaidation for the user form.
 *
 * @param form_id
 *   The form ID of the passed form.
 * @param $form_state
 *   The form values which you may perform validation on.
 */
function valuvet_2013_email_verify_edit_validate($form, &$form_state) {
  // Validate the e-mail address:
  if ($error = valuvet_2013_email_verify_check($form_state['input']['mail'])) {
    form_set_error('mail', $error);
  }
}

/**
 * Verifies whether the given mail address exists.
 *
 * @param $mail
 *   Email address to verify.
 *
 * @return string
 *   NULL if the address exists, or an error message if we found a problem with
 *   the address.
 */
function valuvet_2013_email_verify_check($mail) {
  include_once DRUPAL_ROOT . '/' . drupal_get_path('module', 'valuvet_2013_email_verify') . '/valuvet_2013_email_verify.inc.php';
  return _valuvet_2013_email_verify_check($mail);
}

/**
 * Implements hook_menu().
 */
function valuvet_2013_email_verify_menu() {
  $items['admin/user/user/valuvet_2013_email_verify'] = array(
    'title' => 'Email Verify',
    'page callback' => 'valuvet_2013_email_verify_checkall',
    'access arguments' => array('administer users'),
    'type' => MENU_LOCAL_TASK,
    'file' => 'valuvet_2013_email_verify.check.inc',
  );
  return $items;
}

