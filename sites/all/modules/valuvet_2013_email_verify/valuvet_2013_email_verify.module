/**
 * Implements hook_help().
 */
function valuvet_2013_email_verify_help($path, $arg) {
  if ($path == 'admin/help#email_verify') {
    $txt = 'This module verifies that email addresses are valid during account registration or edit.';
    return '<p>' . t($txt) . '</p>';
  }
}

/**
 * Implements hook_form_FORM_ID_alter().
 */
function valuvet_2013_email_verify_form_user_register_form_alter(&$form, &$form_state, $form_id) {
  $form['#validate'][] = 'valuvet_2013_email_verify_edit_validate';

  // NOTE begin code added by Vincenzo Di Biaggio
  $form['account']['mail']['#prefix'] = '<div id="email_display_error">';
  $form['account']['mail']['#suffix'] = '</div>';
  $form['account']['mail']['#ajax'] =  array(
			        'callback' => 'valuvet_2013_email_verify_edit_validate_ajax',
				'wrapper' => 'email_display_error',
				'event' => 'focusout',
				'method' => 'replace'
			);
  $form['account']['mail']['#default_value'] = '';
  
  $mail = (isset($form_state['input']['mail'])) ? $form_state['input']['mail'] : $form['account']['mail']['#default_value'];
  if (isset($form_state['input']['mail']) && $error = valuvet_2013_email_verify_check($mail))
  {
	form_set_error('mail', $error);
  }  
  // END
}

// NOTE begin code added by Vincenzo Di Biaggio
function valuvet_2013_email_verify_edit_validate_ajax($form, &$form_state) {
  return $form['account']['mail'];
}
// END

